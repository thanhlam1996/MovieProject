<%include ../partials/header%>

<!-- Breadcrumb Area Start -->
<%data.Items.forEach(function(i){%>
<%var r=0; var count=0%>
<%if(i.ratings){%>
<%i.ratings.forEach((k)=>{%>
<%r+=parseFloat(k)%>
<%count++;%>
<%})%>
<%}else{%>
   <%count=1%>
<%}%>


<section class="filmoja-breadcrumb-area section_70" id="<%=i.id%>">
   <div class="container">
      <div class="row">
         <div class="col-md-12">
            <div class="movie-details-banner">
               <div class="row">
                  <div class="col-lg-3 col-sm-4">
                     <div class="details-banner-thumb">
                        <img src="https://s3-us-west-2.amazonaws.com/movies-project-bucket/<%=i.info.posterimage%>" alt="movie">
                     </div>
                  </div>
                  <div class="col-lg-6 col-sm-8">
                     <div class="details-banner-info">
                        <h3 class="detail-title-movie"><%=i.title%></h3>
                        <p class="details-genre"><i class="fab fa-yelp"></i> <%=i.info.movietype%></p>
                        <p class="details-genre">
                           <div class="movie-details-thumbs" id="large-group-flow">
                              <ul>
                                 <li>
                                    <a href="#"><span class="rating"><i
                                             class="fa fa-thumbs-up"></i><%=i.countlike?i.countlike:0%></span></a>
                                 </li>
                                 <li>
                                    <a href="#"><span class="rating"><i class="fa fa-eye"></i>
                                       <%if(i.movieview){%>
                                          <%=i.movieview%>
                                       <%}else{%>
                                          0
                                       <%}%>

                                    </span></a>
                                 </li>
                                 <li>
                                    <a href="#"><span class="rating"><i class="fa fa-star"></i>
                                       <%var num=(r/count).toFixed(1)%>
                                       <%if((num*10)%10==0){%>
                                          <%=(r/count).toFixed(0)%>
                                       <%}else{%>
                                          <%=(r/count).toFixed(1)%>
                                       <%}%>
                                    </span></a>
                                 </li>
                              </ul>
                           </div>
                        </p>
                        <a href="https://www.youtube.com/watch?v=<%=i.info.trailer%>" class="filmoja-btn tablet-action"><i class="fa fa-play"></i>Xem
                           trailer</a>
                     </div>
                  </div>
                  <div class="col-lg-3">
                     <div class="details-banner-action">
                        <a href="<%=i.info.trailer%>" class="filmoja-btn play-video"><i
                              class="fa fa-play"></i>Xem trailer</a>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
<!-- Breadcrumb Area End -->


<!-- Movie Details Page Start -->
<section class="filmoja-movie-details-page section_70">
   <div class="container">
      <div class="row">

         <div class="col-lg-9 offset-lg-3">

            <div class="movie-details-page-box" id="<%=i.id%>">
               <ul>

                  <li>
                     <%if(i.liker){%>
                     <%var dis=0;%>
                     <%if(i.liker.length>0){%>
                        <%i.liker.forEach((l)=>{%>
                           <%if(l==id_owner){%>
                           <a href="#" class="dislike" id="<%=i.id%>"><span class="rating-total dislike-index" id="<%=dis%>"><i
                                    class="fa fa-thumbs-up"></i>Bỏ thích</span></a>
                           <%}else{%>
                           <a href="#" class="like" id="<%=i.id%>"><span class="rating-total"><i
                                    class="fa fa-thumbs-up"></i>Thích</span></a>
                           <%}%>
