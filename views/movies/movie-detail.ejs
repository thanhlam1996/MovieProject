   <div class="tab-pane fade" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
      <div class="tab-movies-details">
         <div class="row">
            <div class="col-md-12">
               <div class="reviews">
                  <ul class="reviews-box">
                     <%if(i.comment){%>
                     <%var dem=1;%>
                     <%var index=(i.comment.length-1)%>

                     <%i.comment.reverse().forEach((j)=>{%>

                     <li class="single-reviews cmt<%=dem%>" id="<%=index%>">
                        <div class="reviews-autor">
                           <img class="reviews-avatar" src="assets/img/avatar.jpg" alt="">
                           <span
                              class="reviews-date"><%=j.time[0]%>,<%=moment(j.time[1],'YYYY-MM-DD').format('DD/MM/YYYY')%>--
                              <strong><%=j.commenter[0]%></strong></span>
                           <span class="reviews-rating"><i class="fa fa-star"></i><%=j.rating%></span>
                        </div>
                        <p class="reviews-text edit-cmt<%=dem%>" id="<%=index%>"><%=j.contentcmt%></p>
                        <%if(id_owner){%>
                        <%if(id_owner==j.commenter[2]){%>
                        <p class="reviews-text"><a href="" class="delete-comment" id="cmt<%=dem%>">Xóa</a><span> ||
                           </span><a href="" data-toggle="modal" data-target="#dailog-edit-cmt" class="edit-cmt"
                              id="edit-cmt<%=dem%>">Sửa</a></p>
                        <%}else{%>
                        <%if(role_owner>2){%>
                        <p class="reviews-text"><a href="" class="delete-comment" id="cmt<%=dem%>">Xóa</a></p>
                        <%}%>
                           <%}%>
                        <%}%>
                        <%index=index-1%>
                        <%dem++%>

                     </li>
                     <%})%>
                     <%}%>
                                         </ul>
                                         <form action="/movie/comment-movie" method="POST" class="form">
                                            <div class="form-item">
                                               <textarea name="content_cmt" class="txt-content-cmt" placeholder="Write your opinion here..."></textarea>
                                            </div>
                                            <div class="review_rating form-item">
                                               <p>rate now:</p>
                                               <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                                               <input type="radio" id="star4half" name="rating" value="4.5" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                                               <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                                               <input type="radio" id="star3half" name="rating" value="3.5" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
