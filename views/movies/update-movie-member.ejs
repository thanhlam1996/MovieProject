<%include ../partials/header%>

<%include ../partials/dialogloginregister%>

<!-----------------------------------------------Container ------------------------------------------------>
<div class="container">

    <form class="form-writing" action="movie//update-movie-member" method="POST" enctype="multipart/form-data">
        <%data.Items.forEach(function(i){%>
        <div class="form-group">
            <label>
                <h2><%=i.title%></h2>
            </label>
            <input type="text" class="form-control" id="title-movie-writing" name="id" value="<%=i.id%>">
            <input type="text" class="form-control" id="title-movie-writing" name="title" value="<%=i.title%>">
        </div>
        <div class="form-group">
            <div class="row form-inline">
                <label class="col col-2">
                    Nhà phát hành
                </label>
                <input type="text" class="form-control col col-4" disabled id="producer-movie-writing" name="producer"
                    value="<%=i.producer%>">
                <label class="col col-2">Đạo diễn</label>
                <input type="text" value="<%=i.director%>" name="director" class="form-control col col-4">
            </div>
        </div>
        
        <div class="form-group">
            <div class="row form-inline">
                <label class="col col-2">Thời lượng</label>
                <input type="text" value="<%=i.distance%>" name="distance" class="form-control col col-4">
                <label class="col col-2">Ngày công chiếu</label>
                <input type="date" value="<%=i.publicationdate%>" class="form-control col col-4" name="publicationdate">
            </div>
        </div>
        <div class="form-group">
            <div class="row form-inline">
                <label class="col col-2">Diễn viên</label>
                <input type="text" name="actor" value="<%=i.actor%>" class="form-control col col-4">
                <label class="col col-2">Thể loại</label>
                <input type="text" value="<%=i.typemovie%>" class="form-control col col-4" name="typemovie">
            </div>
        </div>
        <div class="form-group">
            <div class="row form-inline">
                <label class="col col-2">Quốc gia</label>
                <input type="text" name="country" value="<%=i.country%>" class="form-control col col-4">
                <label class="col col-2">Ảnh Bìa</label>
                <div class="custom-file col col-4">
                    <input type="file" class="custom-file-input" id="customFile" name="posterimage">
                    <label class="custom-file-label"><input class="file-name" name="filename" type="text"
                            value="Chọn ảnh bìa..."></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row form-inline">
                <label class="col col-2">ID URL</label>
                <input type="text" name="trailer" value="<%=i.trailer%>" class="form-control col col-4">
                <label class="col col-2"></label>
                <img class="imgposter" src=" <%=i.posterimage%>" id="imgposter">
            </div>
        </div>
        <div class="form-group ckeditorgroup">
            <textarea name="content" id="editor" >
                    <%=i.content%>
            </textarea>

            <script>
                ClassicEditor
                    .create(document.querySelector('#editor'))
                    .catch(error => {
                        console.error(error);
                    });
            </script>
        </div>
        <div class="row group-btn-writing">
            <button type="submit" class="btn btn-success btn-submit-writing">Nộp bài</button>
            <button type="button" class="btn btn-primary btn-cancel-writing">Hủy</button>
        </div>
        <%})%>
    </form>

</div>



<!-- </div> -->

